type: golang
metadata:
  name: imaginary-sensor
  author: pupil
  supports:
  - manufacturer: none
    model: none
    firmwareversion: 0.1
  platform: amd64
  os: linux
session:
  server: ""
  token: ""
  API: public

schema:
  version: "2"
  properties:
    temperature:
      type: int64
      unit: °C
      description: The temperature (between 0 and 180°C)
    door:
      opened:
        type: bool
        description: Reports if the door is open
      locked:
        type: bool
        description: |
          Reports if the door is locked. Can be used to lock / unlock the door.
